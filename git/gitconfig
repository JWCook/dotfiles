[core]
    editor = nvim
[alias]
    amend = commit --amend
    b = branch -vv
    c = commit --verbose
    cm = commit -m
    down = pull
    f = fetch origin master:master
    p = pull
    pr = "!git stash; git pull --rebase; git stash pop"
    patch = add --patch
    recommit = commit -c ORIG_HEAD --no-edit
    rb = git rebase --interactive master
    s = status
    ss = status --short
    sv = status -vv
    stat = shortlog --summary --numbered
    stat-all = rev-list --count HEAD
    uncommit = reset --soft HEAD~1
    unstage = reset HEAD
    up = push
[push]
    default = simple
[merge "ours"]
    driver = true
[color]
    diff = always
    grep = always
    status = always
[color "diff"]
    meta = blue
[color "status"]
    header = blue
    branch = cyan
    added = green
    changed = cyan
    deleted = red
    untracked = magenta
[diff]
    tool = nvim -d
[tig]
    vertical-split = false
    split-view-height = 80%
    tab-size = 4
    line-graphics = utf-8
